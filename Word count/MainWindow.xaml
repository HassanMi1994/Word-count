<Window x:Class="Word_count.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Word_count"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Chose a file" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top" Width="743" Click="Button_Click"/>
        <ScrollViewer Height="277" Width="744">
            <TextBlock x:Name="txtEditor" FontSize="16" />
        </ScrollViewer>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Height="31" Margin="24,35,0,0" VerticalAlignment="Top" Width="744"/>
    </Grid>
</Window>
